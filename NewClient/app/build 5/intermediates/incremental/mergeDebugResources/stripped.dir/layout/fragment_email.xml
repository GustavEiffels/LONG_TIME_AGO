<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EmailFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/emailFragmentToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="Email"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/get_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Insert your Id"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:inputType="textPersonName" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/email_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Authentication Number"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/getSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Serial Code"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/leftTime"
                android:text="00:00"
                android:layout_marginLeft="20dp"
                android:textColor="#009999"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/auth_resend"
                android:text="resend"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>



        </LinearLayout>



        <Button
            android:id="@+id/auth_submit"
            android:layout_marginTop="30dp"
            android:text="Submit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <Button
            android:id="@+id/email_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="NEXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />



    </LinearLayout>


</LinearLayout>